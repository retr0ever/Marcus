# =============================================================================
# MARCUS Facial Analysis System - Environment Configuration
# =============================================================================

# System Settings
MARCUS_ENV=development
MARCUS_DEBUG=true
MARCUS_CONFIG_PATH=./configs/default.yaml

# Device Configuration (auto, cuda, mps, cpu)
MARCUS_DEVICE=auto

# Model Paths (optional - uses defaults if not set)
# MARCUS_DETECTION_MODEL_PATH=./models/yolov8n-face.pt
# MARCUS_EMBEDDING_MODEL_PATH=./models/arcface_r100.onnx

# Data Paths
MARCUS_DATA_DIR=./data
MARCUS_MODELS_DIR=./models
MARCUS_LOGS_DIR=./logs

# Vector Database
MARCUS_VECTORDB_PATH=./data/vector_db
MARCUS_VECTORDB_TYPE=faiss

# Compliance Settings
MARCUS_COMPLIANCE_ENABLED=true
MARCUS_AUDIT_LOG_PATH=./data/audit_logs
MARCUS_LOG_RETENTION_DAYS=365

# OSINT Settings
MARCUS_OSINT_CACHE_DIR=./data/osint_cache
MARCUS_OSINT_RATE_LIMIT_RPM=30

# API Keys (for OSINT sources - keep secure!)
# LINKEDIN_CLIENT_ID=
# LINKEDIN_CLIENT_SECRET=

# API Server Settings
MARCUS_API_HOST=0.0.0.0
MARCUS_API_PORT=8000
MARCUS_API_KEY=your-secure-api-key-here

# Encryption (for storing sensitive biometric data)
# MARCUS_ENCRYPTION_KEY=your-32-byte-encryption-key
